#if(count(loveds) > 0) {
  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Loved</th>
      </tr>
    </thead>
    <tbody>
      #for(loved in loveds) {
        <tr>
          <td>
            <a href="/loveds/#(loved.id)">
              #(loved.loved)
            </a>
          </td>
        </tr>
      }
    </tbody>
  </table>
} else {
